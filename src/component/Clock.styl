@import '../include/basic'

.clock
  position relative
  width 320px
  height 80px
  line-height @height
  background-color rgba(#fff, 0.1)
  overflow hidden
  border-radius @height * 0.5

  &:before, &:after
    absolute left top
    content ''
    width 100%
    height 30px
    background-color rgba(#000, 0.8)
    z-index 1

  &:after
    top auto
    bottom 0

  .group
    absolute left top 30px
    width 40px
    overflow visible
    transition transform 300ms

    &:nth-of-type(1)
      left 10px + 30px
    &:nth-of-type(2)
      left 10px + 30px + 20px
    &:nth-of-type(3)
      left 10px + 100px + 30px
    &:nth-of-type(4)
      left 10px + 100px + 30px + 20px
    &:nth-of-type(5)
      left 10px + 100px + 100px + 30px
    &:nth-of-type(6)
      left 10px + 100px + 100px + 30px + 20px

    .item
      width 20px
      height 20px
      line-height @height
      background-color rgba(#000, 0.8)
      color rgba(#fff, 0.5)
      font-size 16px
      font-weight bold

  .separator
    absolute left 100px top 30px
    width 20px
    height 20px
    line-height @height
    color rgba(#000, 0.2)
    font-size 20px
    font-weight bold

    &:nth-of-type(2)
      left 200px

#token
  display none